@model IEnumerable<LocalLinker.Models.Service>
@{
    ViewData["Title"] = "Manage Services";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-3">Services</h2>

<a href="@Url.Action("CreateService", "Admin")" class="btn btn-success mb-3">
    <i class="fa fa-plus"></i> Add New Service
</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Service ID</th>
            <th>Service Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Service_id</td>
                <td>@service.Service_name</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("EditService", new { id = service.Service_id })">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("DeleteService", new { id = service.Service_id })"
                       onclick="return confirm('Are you sure you want to delete this service?');">
                        <i class="fa fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
