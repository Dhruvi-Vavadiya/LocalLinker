@model LocalLinker.Models.Service
@{
    ViewData["Title"] = "Edit Service";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Service</h2>

<form asp-action="EditService" method="post" class="mt-3">
    <input type="hidden" asp-for="Service_id" />

    <div class="mb-3">
        <label asp-for="Service_name" class="form-label"></label>
        <input asp-for="Service_name" class="form-control" />
        <span asp-validation-for="Service_name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Services" class="btn btn-secondary">Cancel</a>
</form>
