@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "All Bookings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h2 class="mb-4">All Bookings</h2>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="fas fa-table me-1"></i> Booking List</h5>
        </div>
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>Booking ID</th>
                            <th>Provider</th>
                            <th>Service</th>
                            <th>Status</th>
                            <th>Created At</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var b in Model)
                            {
                                <tr>
                                    <td>@b.BookingId</td>
                                    <td>@b.ProviderName</td>
                                    <td>@b.ServiceName</td>
                                    <td>
                                        <span class="badge
                                            @(b.Status == "Pending" ? "bg-warning text-dark" :
                                              b.Status == "Confirmed" ? "bg-success" :
                                              b.Status == "Completed" ? "bg-primary" :
                                              b.Status == "Cancelled" ? "bg-danger" : "bg-secondary")">
                                            @b.Status
                                        </span>
                                    </td>
                                    <td>@b.Created_At.ToString("dd-MMM-yyyy")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-muted">No bookings found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
