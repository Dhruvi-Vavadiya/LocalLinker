@using Microsoft.AspNetCore.Http
@{
    var userId = Context.Session.GetInt32("UserId");
    var userName = Context.Session.GetString("UserName");
    var isLoggedIn = userId != null;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Customer Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        html[data-theme="dark"] {
            background-color: #121212;
            color-scheme: dark;
        }

            html[data-theme="dark"] body {
                background-color: #121212;
                color: #f5f5f5;
            }

        html[data-theme="light"] body {
            background-color: #ffffff;
            color: #212529;
        }

        .content-wrapper {
            flex: 1;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        footer {
            background-color: #1f1f1f;
            color: #bbb;
            text-align: center;
            padding: 10px 0;
            margin-top: auto;
        }

        html[data-theme="light"] footer {
            background-color: #f8f9fa;
            color: #6c757d;
        }

        .theme-toggle {
            cursor: pointer;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Customer")">
                <i class="fas fa-link"></i> LocalLinker
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("MakeBooking", "Customer")">
                                <i class="fas fa-calendar-plus"></i> Book Service
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("MyBookings", "Customer")">
                                <i class="fas fa-list-check"></i> My Bookings
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle"></i> @userName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user"></i> Profile</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Customer")"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Customer")"><i class="fas fa-sign-in-alt"></i> Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register", "Customer")"><i class="fas fa-user-plus"></i> Register</a>
                        </li>
                    }

                    @* <li class="nav-item ms-3"> *@
                    @*     <button class="btn btn-outline-light btn-sm theme-toggle" onclick="toggleTheme()" title="Toggle Light/Dark Mode"> *@
                    @*         <i class="fas fa-adjust"></i> *@
                    @*     </button> *@
                    @* </li> *@
                </ul>
            </div>
        </div>
    </nav>

    <div class="container content-wrapper py-4">
        @RenderBody()
    </div>

    <footer>
        &copy; 2025 LocalLinker | All rights reserved.
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Theme toggle script -->
    <script>
        function toggleTheme() {
            const htmlTag = document.documentElement;
            const currentTheme = htmlTag.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            htmlTag.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
        }

        // Apply saved theme on load
        (function () {
            const savedTheme = localStorage.getItem('theme') || 'dark';
            document.documentElement.setAttribute('data-theme', savedTheme);
        })();
    </script>
</body>
</html>
