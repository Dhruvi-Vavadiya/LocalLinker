        .badge-warning {
            background: rgba(252, 163, 17, 0.1);
            color: var(--warning);
        }

        .badge-danger {
            background: rgba(230, 57, 70, 0.1);
            color: var(--danger);
        }

        /* Table */
        .table th {
            border-top: none;
            font-weight: 600;
            color: var(--dark);
            padding: 15px;
        }

        .table td {
            padding: 15px;
            vertical-align: middle;
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        ::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #a8a8a8;
            }
    </style>
</head>
